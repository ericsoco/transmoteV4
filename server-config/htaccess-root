##### -----[rewrites]----- #####
# remove www subdomain, per no-www.org
Options +FollowSymLinks
RewriteEngine On
RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
RewriteRule ^(.*)$ http://%1/$1 [R=301,L]


##### -----[redirects]----- #####
# 301 redirects
# transmote.com/flar --> words.transmote.com
redirect permanent /flar/index.html http://words.transmote.com/wp/flarmanager/
redirect 301 /flar/index.html http://words.transmote.com/wp/flarmanager/
# transmote.com/v3 --> transmote.com/
redirect permanent /v3 http://transmote.com
redirect 301 /v3 http://transmote.com
# transmote.com/portfolio --> transmote.com/v4/
redirect permanent /portfolio http://transmote.com/v4
redirect 301 /portfolio http://transmote.com/v4
